    <alpha
        android:duration="2000"
        android:fromAlpha="0"
        android:toAlpha="1"
        android:repeatCount="infinite"
        android:repeatMode="reverse"></alpha>

    <scale
        android:duration="2000"
        android:fromXScale="0"
        android:toXScale="2"
        android:fromYScale="0"
        android:toYScale="2"
        android:pivotY="50%"
        android:pivotX="50%"></scale>

    <translate
        android:duration="3000"
        android:fromXDelta="-50%"
        android:toXDelta="50%"
        android:repeatCount="infinite"
        android:repeatMode="reverse"></translate>
</set>